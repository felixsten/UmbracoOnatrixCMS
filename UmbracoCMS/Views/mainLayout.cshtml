@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = null;
	var pageTitle = !string.IsNullOrEmpty(ViewBag.Title) ? $"(ViewBag.Title) / Onatrix " : "Onatrix";
	var headerLogoImage = Model?.Value<IPublishedContent>("logoImage")?.Url() ?? ""; 
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width-device-width, initial-scale=1.0">
	<link rel="stylesheet" href="https://kit.fontawesome.com/a576612222.css" crossorigin="anonymous">
	<link rel="stylesheet" href="/css/main.css?v=1.0.1">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<title>@pageTitle</title>
	<meta name="description" content="@Model.Value("pageDescription")">
	<meta name="keywords" content="@Model.Value("pageKeywords")">
</head>
<body>
	<div class="wrapper">
		<header>
			<div>
				<p>Klarabergsviadukten 90, 111 64 Stockholm</p><i class="fa-brands fa-facebook"></i><i class="fa-brands fa-twitter"></i><i class="fa-brands fa-instagram"></i>
			</div>
			<nav>
				<a href="/home"><img src="https://localhost:44393/media/nvxcesev/brand.png" alt="Onatrix"></a>
				<a href="/about">About</a>
				<a href="/services">Services</a>
				<a href="/projects">Projects</a>
				<a href="/contact">Contact</a>
			</nav>
		</header>

		<main>
			@RenderBody()
		</main>

		<footer>
			<p>© Onatrix. All Rights Reserved. Credits to Themesflat</p>
		</footer>
	</div>

	<script src="/scripts/main.js"></script>	
</body>
</html>